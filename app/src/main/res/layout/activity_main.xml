<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
       tools:context=".MainActivity" >


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
       
       <Button
           android:id="@+id/createDB"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="createDB"
           android:text="CrDb" />
       <Button
           android:id="@+id/createTab"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="createTAB"
           android:text="CrTab" />
        <Button
           android:id="@+id/fillTab"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="fillTAB"
           android:text="FillTab" />
        <Button
           android:id="@+id/studLista"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="studL"
           android:text="ProdL" />
        <Button
           android:id="@+id/ReadWds"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="ReadWords"
           android:text="RWds" />
        
 </LinearLayout>      

    <LinearLayout
